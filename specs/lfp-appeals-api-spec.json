{
  "openapi": "3.0.1",
  "info": {
    "title": "Appeals API",
    "description": "LFP Appeals API Documentation",
    "version": "1.0.0"
  },
  "paths": {
    "/companies/{company-id}/appeals": {
      "get": {
        "tags": [
          "Appeal"
        ],
        "summary": "Get appeals by penalty reference",
        "operationId": "getAppealsByPenaltyReference",
        "parameters": [
          {
            "name": "company-id",
            "description": "ID of the company filing the appeal",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "penaltyReference",
            "description": "ID Reference of the penalty against the company",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Appeals resource retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Appeal"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Appeals not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "tags": [
          "Appeal"
        ],
        "summary": "Create a new appeal",
        "operationId": "submitAppeal",
        "parameters": [
          {
            "name": "ERIC-identity",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "company-id",
            "description": "ID of the company filing the appeal",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Appeal"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Appeal resource created",
            "headers": {
              "location": {
                "description": "URL to get the Appeal"
              }
            },
            "content": {
              "description": "ID of the Appeal",
              "type": "string"
            }
          },
          "400": {
            "description": "Invalid appeal"
          },
          "401": {
            "description": "User is not authorised to submit this appeal"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/companies/{company-id}/appeals/{id}": {
      "get": {
        "tags": [
          "Appeal"
        ],
        "summary": "Get an appeal by ID",
        "operationId": "getAppealById",
        "parameters": [
          {
            "name": "company-id",
            "description": "ID of the company filing the appeal",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "description": "ID of the appeal in mongoDB",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Appeal resource retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Appeal"
                }
              }
            }
          },
          "404": {
            "description": "Appeal not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Appeal": {
        "required": [
          "penaltyIdentifier",
          "reasons"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID of appeal from mongoDB"
          },
          "createdAt": {
            "description": "Timestamp of appeals creation",
            "type": "string",
            "format": "date",
            "example": "2021-02-01"
          },
          "createdBy": {
            "$ref": "#/components/schemas/CreatedBy"
          },
          "penaltyIdentifier": {
            "$ref": "#/components/schemas/PenaltyIdentifier"
          },
          "reasons": {
            "$ref": "#/components/schemas/Reason"
          }
        }
      },
      "Attachment": {
        "required": [
          "contentType",
          "id",
          "name",
          "size"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID of attachement"
          },
          "name": {
            "type": "string",
            "description": "name of the attachement file"
          },
          "contentType": {
            "type": "string"
          },
          "size": {
            "description": "file size of attachement",
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "url": {
            "type": "string",
            "description": "url path to attachment"
          }
        }
      },
      "CreatedBy": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "id of user creating appeal"
          },
          "emailAddress": {
            "type": "string",
            "description": "email address of user creating appeal"
          }
        }
      },
      "OtherReason": {
        "required": [
          "description",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "title of reason"
          },
          "description": {
            "type": "string",
            "description": "description of other reason"
          },
          "attachments": {
            "type": "array",
            "description": "supporting attachments for other reason",
            "items": {
              "$ref": "#/components/schemas/Attachment"
            }
          }
        }
      },
      "IllnessReason": {
        "required": [
          "illPerson",
          "illnessStartDate",
          "continuedIllness",
          "illnessEndDate",
          "illnessImpactFurtherInformation",
          "attachments"
        ],
        "type": "object",
        "properties": {
          "illPerson": {
            "type": "string",
            "description": "name of ill person"
          },
          "illnessStartDate": {
            "type": "string",
            "format": "date",
            "description": "the date the illness started",
            "example": "2021-01-01"
          },
          "continuedIllness": {
            "type": "boolean",
            "description": "marker for if illness is ongoing"
          },
          "illnessEndDate": {
            "type": "string",
            "format": "date",
            "description": "the date the illness ended",
            "example": "2021-02-01"
          },
          "illnessImpactFurtherInformation": {
            "type": "string",
            "description": "further information of how the illness affects filing"
          },
          "attachments": {
            "type": "array",
            "description": "array of attachements for illness evidence",
            "items": {
              "$ref": "#/components/schemas/Attachment"
            }
          }
        }
      },
      "PenaltyIdentifier": {
        "required": [
          "penaltyReference"
        ],
        "type": "object",
        "properties": {
          "companyNumber": {
            "type": "string",
            "description": "company number on penalty"
          },
          "penaltyReference": {
            "pattern": "([A-Z0-9/]{8,14})",
            "type": "string",
            "description": "reference id for penalty"
          }
        }
      },
      "Reason": {
        "description": "Only 1 reason type to be used.",
        "type": "object",
        "properties": {
          "illnessReason": {
            "$ref": "#/components/schemas/IllnessReason"
          },
          "other": {
            "$ref": "#/components/schemas/OtherReason"
          }
        }
      }
    }
  }
}