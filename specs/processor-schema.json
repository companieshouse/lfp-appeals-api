{
  "swagger": "2.0",
  "info": {
    "description": "An API for processing an appeal against a late filing penalty (LFP)",
    "version": "1.0.0",
    "title": "Companies House LFP Appeals API"
  },
  "host": "api.companieshouse.gov.uk",
  "basePath": "/company/{companyNumber}/penalties/late-filing/appeals",
  "schemes": [
    "https"
  ],
  "tags": [
    {
      "name": "Processor API"
    }
  ],
  "paths": {
    "/{requestId}": {
      "parameters": [
        {
          "in": "path",
          "name": "requestId",
          "type": "string",
          "required": true,
          "description": "The appeal request unique identifier"
        }
      ],
      "post": {
        "tags": [
          "Processor API"
        ],
        "summary": "Process and appeal",
        "produces": [
          "application/json"
        ],
        "responses": {
          "202": {
            "description": "Accepts the request for processing"
          }
        }
      }
    }
  }
}
